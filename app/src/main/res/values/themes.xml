<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudyHabitApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="popup_msg">
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="boxes">
        <item name="android:background">@drawable/boxes_timer</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_secondary_color</item>
        <item name="android:hint">00</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="colon_timer">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">40sp</item>
        <item name="android:text">:</item>
    </style>
    <style name="box_label">
        <item name="android:textColor">@color/text_secondary_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="advice">
        <item name="android:textColor">@color/alert</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="buttons">
        <item name="android:background">@drawable/buttons_main</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>